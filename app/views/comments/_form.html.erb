<div class="comments-area clearfix">
  <h3 class="comment-reply-title">
    Оставить комментарий:
  </h3>

  <%= form_for (@comment) do |f| %>
    <% if @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

        <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.text_field :user_name, class: "form-control", :placeholder => "Ваше имя:" %>
    </div>

    <div class="form-group">
      <%= f.text_field :email, class: "form-control", :placeholder => "E-mail:" %>
    </div>

    <div class="form-group">
      <%= f.text_area :body, rows: 5, class: "form-control", :placeholder => "Ваш комментарий:" %>
    </div>

    <div class="pull-right">
      <%= f.submit "Отправить комментарий", class: "btn btn-warning" %>
    </div>

    <%=f.hidden_field :article_id, value: @article.id %>
  <% end %>
</div>


